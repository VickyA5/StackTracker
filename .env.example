DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database configuration (PostgreSQL)
# Local docker-compose uses these variables to connect to the local `db` service.
DB_NAME=stacktracker
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# If you want to point to a remote DB (NOT recommended for local dev), you can use DATABASE_URL instead.
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# ---------- PROD VARIABLES ----------

# Supabase configuration (used for supplier file storage)
SUPABASE_PROJECT_ID=project-id-here

# Use a service role key for backend storage operations when possible.
# At minimum, one of these keys must be set.
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
# SUPABASE_ANON_KEY=your-anon-key-here

# Bucket name where supplier files will be stored
SUPABASE_BUCKET=provider-files-local
